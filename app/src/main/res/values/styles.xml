<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/btnTxtSize</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="funStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/fnBtnTxtSize</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BckspcuttonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/BkspcbtnTxtSize</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="NumberStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="ZeroNumberStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="editTxtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/editTxtViewHeight</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:gravity">right</item>
        <item name="android:nextFocusRight">@id/EditTxtView</item>
        <item name="android:paddingLeft">@dimen/viewPaddingLeft</item>
        <item name="android:paddingRight">@dimen/viewPaddingRight</item>
        <item name="android:paddingTop">@dimen/viewPaddingTop</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/editTxtSize</item>

        <!-- make Edit Text view have single line scrolled horizontally -->
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="resTxtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/resTxtViewHeight</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingLeft">@dimen/viewPaddingLeft</item>
        <item name="android:paddingRight">@dimen/viewPaddingRight</item>
        <item name="android:paddingBottom">@dimen/viewPaddingBottom</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/resTxtSize</item>
    </style>

</resources>